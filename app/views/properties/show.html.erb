<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @property.name %>
</p>

<%= link_to 'Edit', edit_property_path(@property) %> |
<%= link_to 'Back', properties_path %>

<h2>Photos</h2>
<% @property.photos.each do |photo| %>
  <%= image_tag photo.image.url %>
<% end %>

<h2>Add a new photo</h2>
<%= form_for @photo do |f| %>
  <%= f.file_field :image %>
  <%= f.hidden_field :photoable_id, value: @property.id %>
  <%= f.hidden_field :photoable_type, value: @property.class %>
  <%= f.submit %>
<% end %>
